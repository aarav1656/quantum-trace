{
  "name": "iota-supply-chain-backend",
  "version": "1.0.0",
  "description": "Enterprise Supply Chain Backend API with IOTA Integration",
  "main": "src/app.js",
  "scripts": {
    "start": "node dist/app.js",
    "dev": "nodemon --exec ts-node src/app.ts",
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "typecheck": "tsc --noEmit",
    "docker:build": "docker build -t supply-chain-api .",
    "docker:run": "docker run -p 3000:3000 supply-chain-api",
    "migrate": "npx knex migrate:latest",
    "seed": "npx knex seed:run"
  },
  "dependencies": {
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "helmet": "^6.1.5",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "winston": "^3.8.2",
    "express-validator": "^6.15.0",
    "jsonwebtoken": "^9.0.0",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.0.3",
    "pg": "^8.10.0",
    "knex": "^2.4.2",
    "redis": "^4.6.6",
    "ioredis": "^5.3.2",
    "ws": "^8.13.0",
    "socket.io": "^4.6.1",
    "amqplib": "^0.10.3",
    "axios": "^1.4.0",
    "crypto": "^1.0.1",
    "uuid": "^9.0.0",
    "joi": "^17.9.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^4.6.2",
    "prom-client": "^14.2.0",
    "@iota/sdk": "^1.1.0",
    "@iota/util": "^1.9.0",
    "node-cron": "^3.0.2",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.32.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^18.15.11",
    "@types/cors": "^2.8.13",
    "@types/compression": "^1.7.2",
    "@types/morgan": "^1.9.4",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/bcryptjs": "^2.4.2",
    "@types/ws": "^8.5.4",
    "@types/uuid": "^9.0.1",
    "@types/multer": "^1.4.7",
    "@types/jest": "^29.5.0",
    "@types/supertest": "^2.0.12",
    "typescript": "^5.0.2",
    "ts-node": "^10.9.1",
    "nodemon": "^2.0.22",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "supertest": "^6.3.3",
    "eslint": "^8.38.0",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "supply-chain",
    "blockchain",
    "iota",
    "api",
    "enterprise",
    "iot",
    "traceability"
  ]
}